{
  "name": "api-gateway",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "typecheck": "tsc --noEmit",
    "build": "tsc -b && mkdir -p dist/openapi && cp src/openapi/openapi.yaml dist/openapi/",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "dependencies": {
    "@hyperlocal/shared": "*",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "http-status-codes": "^2.3.0",
    "js-yaml": "^4.1.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.5.1",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.0.2",
    "tsx": "^3.12.7",
    "typescript": "^5.2.2"
  }
}
