generator client {
  provider = "prisma-client"
   output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id               String    @id @default(uuid())
  authIdentityId   String    @unique

  firstName        String
  lastName         String
  username         String?   @unique
  avatarUrl        String?
  email            String?   @unique
  phone            String?   @unique
  isActive         Boolean   @default(true)
  isDeleted        Boolean   @default(false)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  addresses        Address[]
  @@index([authIdentityId])
  @@index([email])
  @@map("users")
}

model Address {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  label        String?
  addressLine1 String?
  addressLine2 String?
  city         String?
  state        String?
  postalCode   String?
  country      String?
  latitude     Float?
  longitude    Float?
  isDefault    Boolean  @default(false)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  @@index([userId])
  @@index([userId, isActive, isDefault])
  @@map("addresses")
}

